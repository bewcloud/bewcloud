{
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "README.md",
      "public/css/tailwind.css",
      "public/css/tailwind-input.css"
    ]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "no-window"]
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns"
    ]
  },
  "imports": {
    "/": "./",
    "./": "./",

    "xml": "https://deno.land/x/xml@2.1.3/mod.ts",
    "mrmime": "https://deno.land/x/mrmime@v2.0.0/mod.ts",
    "postgres": "https://deno.land/x/postgres@v0.19.3/mod.ts",
    "sass": "https://deno.land/x/denosass@1.0.6/mod.ts",

    "preact": "https://esm.sh/preact@10.27.0",
    "preact/": "https://esm.sh/preact@10.27.0/",
    "preact-render-to-string": "https://esm.sh/preact-render-to-string@6.6.1?deps=preact@10.27.0",
    "@preact/signals": "https://esm.sh/*@preact/signals@2.3.1?deps=preact@10.27.0",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.12.1?deps=preact@10.27.0",
    "chart.js": "https://esm.sh/chart.js@4.4.9/auto",
    "otpauth": "https://esm.sh/otpauth@9.4.0",
    "qrcode": "https://esm.sh/qrcode@1.5.4",
    "openid-client": "https://esm.sh/openid-client@6.6.3",

    "@simplewebauthn/server": "jsr:@simplewebauthn/server@13.2.1",
    "@simplewebauthn/server/helpers": "jsr:@simplewebauthn/server@13.2.1/helpers",
    "@simplewebauthn/browser": "jsr:@simplewebauthn/browser@13.2.0",
    "std/assert/assert-equals": "jsr:@std/assert@0.226.0/assert-equals",
    "std/assert/assert-not-equals": "jsr:@std/assert@0.226.0/assert-not-equals",
    "std/assert/assert-match": "jsr:@std/assert@0.226.0/assert-match",
    "std/http/file-server": "jsr:@std/http@0.224.4/file-server",
    "std/dotenv/load": "jsr:@std/dotenv@0.224.0/load",
    "std/http/cookie": "jsr:@std/http@1.0.5/cookie",
    "std/encoding/base64url": "jsr:@std/encoding@1.0.4/base64url",
    "std/encoding/base64": "jsr:@std/encoding@1.0.4/base64",
    "std/encoding/base32": "jsr:@std/encoding@1.0.4/base32",
    "std/path/join": "jsr:@std/path@1.0.6/join",
    "std/path/resolve": "jsr:@std/path@1.0.6/resolve",
    "deno/emit": "jsr:@deno/emit@0.41.0",
    "deno/gfm": "jsr:@deno/gfm@0.9.0",
    "croner": "jsr:@hexagon/croner@9.1.0",

    "@tailwindcss/cli": "npm:@tailwindcss/cli@4.1.7",
    "tailwindcss": "npm:tailwindcss@4.1.7",
    "nodemailer": "npm:nodemailer@7.0.5",

    "tsdav": "https://raw.githubusercontent.com/sunsama/tsdav/cc1c5a09b64c87bbee7e5f171cfcb6748e99469e/dist/tsdav.js"
  },
  "lock": false,
  "nodeModulesDir": "auto",

  "tasks": {
    "dev-app": "deno run --watch --allow-net --allow-read --allow-env --allow-write --allow-sys --allow-ffi main.ts",
    "dev-tailwind": "make watch-tailwind",
    "watch-app": {
      "dependencies": ["dev-app", "dev-tailwind"]
    }
  }
}
